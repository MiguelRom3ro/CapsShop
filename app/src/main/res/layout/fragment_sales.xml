<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sales.SalesFragment">

    <ImageView
        android:id="@+id/imv_sales"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:background="@android:color/holo_blue_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_title_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_sales"
        android:textSize="@dimen/title_one"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/common_min_padding"
        app:layout_constraintTop_toTopOf="@+id/imv_sales"
        app:layout_constraintStart_toEndOf="@id/imv_sales"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Â¡Descubre precios increibles todos los dias!"
        android:layout_marginTop="@dimen/common_min_padding"
        app:layout_constraintTop_toBottomOf="@id/tv_title_sales"
        app:layout_constraintStart_toStartOf="@id/tv_title_sales"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_default_padding"
        app:layout_constraintTop_toBottomOf="@id/imv_sales"/>

</androidx.constraintlayout.widget.ConstraintLayout>